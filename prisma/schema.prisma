generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Multi-tenant Firms
model Firm {
  id            String    @id @default(cuid())
  name          String
  subdomain     String    @unique
  logoUrl       String?
  primaryColor  String    @default("#1E3A5F")
  accentColor   String    @default("#3B82F6")
  template      String    @default("consulting") // security, accounting, legal, marketing, consulting
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relationships
  users         User[]
  clients       Client[]
  projects      Project[]
  documents     Document[]
  
  @@index([subdomain])
}

// Firm admin users (login via magic link)
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  role          String    @default("admin") // admin, member
  
  firmId        String
  firm          Firm      @relation(fields: [firmId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  sessions      Session[]
  accounts      Account[]
  
  @@index([firmId])
}

// Client users (belong to a firm, see white-labeled portal)
model Client {
  id            String    @id @default(cuid())
  email         String
  name          String
  passwordHash  String?   // Set on first login
  
  firmId        String
  firm          Firm      @relation(fields: [firmId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?
  
  // Relationships
  projects      ProjectClient[]
  documents     DocumentClient[]
  messages      Message[]
  activities    Activity[]
  
  @@unique([email, firmId]) // Same email can exist under different firms
  @@index([firmId])
}

// Projects (Kanban-style)
model Project {
  id            String    @id @default(cuid())
  name          String
  description   String?
  status        String    @default("not_started") // not_started, in_progress, review, complete
  
  firmId        String
  firm          Firm      @relation(fields: [firmId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relationships
  clients       ProjectClient[]
  documents     Document[]
  messages      Message[]
  
  @@index([firmId])
}

// Many-to-many: Project <-> Client
model ProjectClient {
  projectId     String
  project       Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  clientId      String
  client        Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)
  
  assignedAt    DateTime  @default(now())
  
  @@id([projectId, clientId])
}

// Documents
model Document {
  id            String    @id @default(cuid())
  name          String
  originalName  String
  mimeType      String
  size          Int       // bytes
  storageKey    String    // S3/Supabase storage key
  expiresAt     DateTime?
  
  firmId        String
  firm          Firm      @relation(fields: [firmId], references: [id], onDelete: Cascade)
  
  projectId     String?
  project       Project?  @relation(fields: [projectId], references: [id], onDelete: SetNull)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relationships
  clients       DocumentClient[]
  activities    Activity[]
  
  @@index([firmId])
  @@index([projectId])
}

// Many-to-many: Document <-> Client
model DocumentClient {
  documentId    String
  document      Document  @relation(fields: [documentId], references: [id], onDelete: Cascade)
  
  clientId      String
  client        Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)
  
  viewedAt      DateTime?
  downloadedAt  DateTime?
  
  @@id([documentId, clientId])
}

// Messages (threaded per project)
model Message {
  id            String    @id @default(cuid())
  content       String
  
  projectId     String
  project       Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  // Either from client or from firm (userId is null for client messages)
  clientId      String?
  client        Client?   @relation(fields: [clientId], references: [id], onDelete: SetNull)
  
  fromFirm      Boolean   @default(false) // true = firm sent it, false = client sent it
  
  createdAt     DateTime  @default(now())
  
  @@index([projectId])
}

// Activity tracking (the "wow moment")
model Activity {
  id            String    @id @default(cuid())
  type          String    // view, download, login, message
  
  clientId      String
  client        Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)
  
  documentId    String?
  document      Document? @relation(fields: [documentId], references: [id], onDelete: SetNull)
  
  metadata      Json?     // Additional context
  
  createdAt     DateTime  @default(now())
  
  @@index([clientId])
  @@index([createdAt])
}

// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
